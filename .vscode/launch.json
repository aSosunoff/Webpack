    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "build",
            "program": "${workspaceFolder}/01_simple_build/node_modules/webpack-cli/bin/cli",
            "args": [
                "--config",
                "./01_simple_build/webpack.config.js"
            ],
            "autoAttachChildProcesses": true,
            "stopOnEntry": true,
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Launch Webpack",
            "program": "${workspaceFolder}/01_simple_build/node_modules/webpack/bin/webpack.js",
            "args": [
                "--config", "./01_simple_build/webpack.config.js"
            ],
            "env" : { 
                "NODE_ENV" : "production"
            }
        }
    ]
}